@model Proyecto.Presentacion.Models.EgresoModelO

@{
    ViewData["Title"] = "NuevoEgreso";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<div class="container-fluid  col-xl-12">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h1 mb-3 text-gray-800" style="text-align:center">REGISTRAR MIS EGRESOS</h1>
    </div>
    <hr />
    <div class="row">
        <!--  Activos actuales -->
        <div class="col-xl-5 col-md-5 mb-4">
            <div class="card shadow h-100 py-2">
                <div class="card-body" style="margin-top:5%">
                    <form asp-action="NuevoEgreso">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="id_usuario" class="control-label"></label>
                            <input asp-for="id_usuario" class="form-control" />
                            <span asp-validation-for="id_usuario" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="fecha" class="control-label"></label>
                            <input asp-for="fecha" class="form-control" />
                            <span asp-validation-for="fecha" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="monto" class="control-label"></label>
                            <input asp-for="monto" class="form-control" />
                            <span asp-validation-for="monto" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="descripcion" class="control-label"></label>
                            <textarea class="form-control" id="comments" rows="7" asp-for="descripcion" placeholder="Escribe aquí los detalles de tu egreso que desees recordar"></textarea>
                            <span asp-validation-for="descripcion" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit"  value="Registrar" class="btn btn-primary w-50" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!--  Imágen -->
        <div class="col-xl-7 col-md-7 ">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <h1 class="h5 mb-3 text-gray-800" style="text-align:center">¡Registra tus egresos y toma el control de tus finanzas! </h1>
                    <img style="width:80%; margin:-65px 10% -40px 10%;" src="~/img/banner1.png" alt="Sé constante en el registro de tus egresos" />
                    <div>
                        <ul class="list-group">
                            <li class="list-group-item">¡Ningún egreso es insignificante, cada uno es una pieza clave de tu rompecabezas financiero!</li>
                            <li class="list-group-item">¡La atención a cada egreso es la clave para tener finanzas sólidas, ¡desarrolla ese hábito!</li>
                            <li class="list-group-item">¡Establece un momento del día para tus finanzas, tu futuro te lo agradecerá enormemente!</li>
                            <li class="list-group-item">¡Tus egresos te guían hacia dónde enfocar tus esfuerzos, sé estratégico y alcanza el éxito!</li>
                            <li class="list-group-item">¡Simplifica el proceso, que registrar egresos sea rápido y efectivo, ¡tú puedes!</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    if ('@ViewBag.mensaje' != "") {
        Swal.fire({
            title: "¡Felicitaciones!",
            text: "Cada registro de tus egresos es un tesoro que resguarda tu futuro",
            icon: "success"
        });
    }
</script>
